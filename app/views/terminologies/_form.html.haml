= form_for @terminology do |f|
  - if @terminology.errors.any?
    #error_explanation
      %h2= "#{pluralize(@terminology.errors.count, "error")} prohibited this terminology from being saved:"
      %ul
        - @terminology.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :term
    = f.text_field :term
  .field
    = f.label :desc
    = f.text_area :desc
  .actions
    = f.submit 'Save'
