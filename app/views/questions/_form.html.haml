.row
  = form_for @question do |f|
    - if @question.errors.any?
      #error_explanation
        %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
        %ul
          - @question.errors.full_messages.each do |msg|
            %li= msg
    .span4
      .field
        = f.label :section
        = f.text_field :section
    .span4    
      .field
        = f.label :qtype
        = f.select :qtype, options_for_select([["choice", "choice"], ["true-false", "true-false"],["short", "short"]], "choice")
    .row
      .span10
        .field
          = f.label :statement
          = f.text_area :statement, :size => "50x6"
        .field
          = f.label :choices
          = f.text_area :choices, :size => "50x6"
        .field
          = f.label :answer
          = f.text_field :answer
        .actions
          = f.submit 'Save'
